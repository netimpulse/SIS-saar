{{ 'dual-service-hero.css' | asset_url | stylesheet_tag }}

<section class="dual-service-hero" id="dual-service-hero-{{ section.id }}">
  <div class="dual-service-container">
    
    <!-- Left Side -->
    <div class="service-side service-left">
      <div class="service-image-container">
        <img 
          src="{{ section.settings.left_image | img_url: '800x600' }}" 
          alt="{{ section.settings.left_image.alt | default: section.settings.left_title }}"
          class="service-image default-image"
          loading="lazy"
        >
        {% if section.settings.left_hover_image %}
          <img 
            src="{{ section.settings.left_hover_image | img_url: '800x600' }}" 
            alt="{{ section.settings.left_hover_image.alt | default: section.settings.left_title }}"
            class="service-image hover-image"
            loading="lazy"
          >
        {% endif %}
      </div>
      
      <div class="service-content">
        <div class="service-text">
          <h2 class="service-title" style="font-size: {{ section.settings.dual_hero_title_size }}px !important; color: {{ section.settings.dual_hero_title_color }} !important; font-weight: {{ section.settings.dual_hero_title_weight }} !important;">{{ section.settings.left_title }}</h2>
          <p class="service-subtitle" style="font-size: {{ section.settings.dual_hero_subtitle_size }}px !important; color: {{ section.settings.dual_hero_subtitle_color }} !important; font-weight: {{ section.settings.dual_hero_subtitle_weight }} !important;">{{ section.settings.left_subtitle }}</p>
        </div>
        
        {% if section.settings.left_show_button and section.settings.left_button_text != blank %}
          <div class="service-button-container">
            <a 
              href="{{ section.settings.left_button_link | default: '#' }}" 
              class="service-button service-button-left"
            >
              {{ section.settings.left_button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Right Side -->
    <div class="service-side service-right">
      <div class="service-image-container">
        <img 
          src="{{ section.settings.right_image | img_url: '800x600' }}" 
          alt="{{ section.settings.right_image.alt | default: section.settings.right_title }}"
          class="service-image default-image"
          loading="lazy"
        >
        {% if section.settings.right_hover_image %}
          <img 
            src="{{ section.settings.right_hover_image | img_url: '800x600' }}" 
            alt="{{ section.settings.right_hover_image.alt | default: section.settings.right_title }}"
            class="service-image hover-image"
            loading="lazy"
          >
        {% endif %}
      </div>
      
      <div class="service-content">
        <div class="service-text">
          <h2 class="service-title" style="font-size: {{ section.settings.dual_hero_title_size }}px !important; color: {{ section.settings.dual_hero_title_color }} !important; font-weight: {{ section.settings.dual_hero_title_weight }} !important;">{{ section.settings.right_title }}</h2>
          <p class="service-subtitle" style="font-size: {{ section.settings.dual_hero_subtitle_size }}px !important; color: {{ section.settings.dual_hero_subtitle_color }} !important; font-weight: {{ section.settings.dual_hero_subtitle_weight }} !important;">{{ section.settings.right_subtitle }}</p>
        </div>
        
        {% if section.settings.right_show_button and section.settings.right_button_text != blank %}
          <div class="service-button-container">
            <a 
              href="{{ section.settings.right_button_link | default: '#' }}" 
              class="service-button service-button-right"
            >
              {{ section.settings.right_button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>

  </div>
</section>

<style>
  #dual-service-hero-{{ section.id }} .service-button-left {
    background-color: {{ section.settings.left_button_bg_color }};
    color: {{ section.settings.left_button_text_color }};
    border: 2px solid {{ section.settings.left_button_border_color }};
  }
  
  #dual-service-hero-{{ section.id }} .service-button-left:hover {
    background-color: {{ section.settings.left_button_hover_bg_color }};
    color: {{ section.settings.left_button_hover_text_color }};
    border-color: {{ section.settings.left_button_hover_border_color }};
  }
  
  #dual-service-hero-{{ section.id }} .service-button-right {
    background-color: {{ section.settings.right_button_bg_color }};
    color: {{ section.settings.right_button_text_color }};
    border: 2px solid {{ section.settings.right_button_border_color }};
  }
  
  #dual-service-hero-{{ section.id }} .service-button-right:hover {
    background-color: {{ section.settings.right_button_hover_bg_color }};
    color: {{ section.settings.right_button_hover_text_color }};
    border-color: {{ section.settings.right_button_hover_border_color }};
  }
  
  #dual-service-hero-{{ section.id }} .service-left .service-content {
    left: {{ section.settings.left_content_x }}%;
    top: {{ section.settings.left_content_y }}%;
  }
  
  #dual-service-hero-{{ section.id }} .service-right .service-content {
    left: {{ section.settings.right_content_x }}%;
    top: {{ section.settings.right_content_y }}%;
  }
  
  #dual-service-hero-{{ section.id }} .service-left .service-content:hover {
    top: calc({{ section.settings.left_content_y }}% - 5px);
  }
  
  #dual-service-hero-{{ section.id }} .service-right .service-content:hover {
    top: calc({{ section.settings.right_content_y }}% - 5px);
  }
</style>

