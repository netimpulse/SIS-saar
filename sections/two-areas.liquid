{% comment %}
  Section: two-areas
  Anpassung gemäß der Erkenntnis, dass dynamische Styles in den <style>-Block müssen.
  Basiert auf der ersten umfassenden Implementierung der Farb- und Schriftgrößen-Settings.
  Nutzt die spezifischen Kachel-Klassen aus dem Snippet.
  KORREKTUR: Button-Hover-Selektor spezifischer gemacht.
{% endcomment %}

<link rel="stylesheet" href="{{ 'section-two-areas.css' | asset_url }}">

<style>
  /* ID-spezifisches Styling */
  {% assign section_selector = '#two-areas-' | append: section.id %}

  {{ section_selector }} .area--industry {
    border-top-color: {{ section.settings.industry_area_border_color | default: '#0B3D91' }};
  }
  {{ section_selector }} .area--building {
    border-top-color: {{ section.settings.building_area_border_color | default: '#57B894' }};
  }

  /* --- Kachel-Styling --- */
  {{ section_selector }} .sub-service-item.area--industry-tile {
    background-color: {{ section.settings.industry_tile_bg_color | default: '#0B3D91' }} !important;
  }
  {{ section_selector }} .sub-service-item.area--building-tile {
    background-color: {{ section.settings.building_tile_bg_color | default: '#57B894' }} !important;
  }

  {{ section_selector }} .sub-service-item.area--industry-tile .sub-service-item__title {
    color: {{ section.settings.industry_tile_text_color | default: '#FFFFFF' }} !important;
  }
  {{ section_selector }} .sub-service-item.area--building-tile .sub-service-item__title {
    color: {{ section.settings.building_tile_text_color | default: '#FFFFFF' }} !important;
  }

  {{ section_selector }} .sub-service-item.area--industry-tile:hover {
    background-color: {{ section.settings.industry_tile_bg_hover_color | default: '#0056b3' }} !important;
  }
  {{ section_selector }} .sub-service-item.area--building-tile:hover {
    background-color: {{ section.settings.building_tile_bg_hover_color | default: '#4AA080' }} !important;
  }
  /* --- Ende Kachel-Styling --- */

  /* Button Hover-Effekte - ANGEPASSTER SELEKTOR */
  {{ section_selector }} .area--industry .btn--industry:hover { /* <--- HIER DIE ÄNDERUNG */
    background-color: {{ section.settings.industry_btn_bg_hover_color | default: '#FFFFFF' }} !important;
    color: {{ section.settings.industry_btn_text_hover_color | default: '#0B3D91' }} !important;
    border-color: {{ section.settings.industry_btn_border_hover_color | default: '#0B3D91' }} !important;
  }
  {{ section_selector }} .area--building .btn--building:hover { /* <--- HIER DIE ÄNDERUNG */
    background-color: {{ section.settings.building_btn_bg_hover_color | default: '#FFFFFF' }} !important;
    color: {{ section.settings.building_btn_text_hover_color | default: '#57B894' }} !important;
    border-color: {{ section.settings.building_btn_border_hover_color | default: '#57B894' }} !important;
  }
</style>

<section class="two-areas" id="two-areas-{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.show_heading -%}
      <h2 class="two-areas__heading" style="font-size: {{ section.settings.heading_font_size }}px; color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}
    {%- if section.settings.show_subheading -%}
      <p class="two-areas__subheading" style="font-size: {{ section.settings.subheading_font_size }}px; color: {{ section.settings.subheading_color }};">
        {{ section.settings.subheading }}
      </p>
    {%- endif -%}

    <div class="two-areas__grid">
      {%- render 'two-area', side: 'industry', section: section -%}
      {%- render 'two-area', side: 'building', section: section -%}
    </div>
  </div>
</section>

