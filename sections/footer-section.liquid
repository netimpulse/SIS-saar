{{ 'sis-footer.css' | asset_url | stylesheet_tag }}

<footer class="sis-footer" style="background-color: {{ section.settings.background_color }}; padding: {{ section.settings.section_padding }}px 0;">
  <div class="sis-footer__container">
    <!-- Gebäude Service Footer -->
    <div class="sis-footer__section">
      <h3 class="sis-footer__title" 
          style="color: {{ section.settings.title_color }}; 
                 font-size: {{ section.settings.title_font_size }}px;">
        {{ section.settings.gebaeude_title | default: "SIS Saar Gebäude Service" }}
      </h3>
      
      <div class="sis-footer__content">
        <!-- Kontakt Info -->
        <div class="sis-footer__info">
          <h4 class="sis-footer__subtitle" 
              style="color: {{ section.settings.subtitle_color }}; 
                     font-size: {{ section.settings.subtitle_font_size }}px;">
            Kontakt
          </h4>
          
          {% if section.settings.gebaeude_address %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              {{ section.settings.gebaeude_address }}
            </p>
          {% endif %}
          
          {% if section.settings.gebaeude_phone %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              Tel: {{ section.settings.gebaeude_phone }}
            </p>
          {% endif %}
          
          {% if section.settings.gebaeude_email %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              E-Mail: {{ section.settings.gebaeude_email }}
            </p>
          {% endif %}
        </div>
        
        <!-- Rechtliches -->
        <div class="sis-footer__legal">
          <h4 class="sis-footer__subtitle" 
              style="color: {{ section.settings.subtitle_color }}; 
                     font-size: {{ section.settings.subtitle_font_size }}px;">
            Rechtliches
          </h4>
          
          {% for block in section.blocks %}
            {% if block.type == 'gebaeude_legal' %}
              <a href="{{ block.settings.link }}" 
                 class="sis-footer__link"
                 style="color: {{ section.settings.link_color }}; 
                        font-size: {{ section.settings.text_font_size }}px;">
                {{ block.settings.text }}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    
    <!-- Separator -->
    <div class="sis-footer__separator" 
         style="background-color: {{ section.settings.separator_color }};"></div>
    
    <!-- Industrie Service Footer -->
    <div class="sis-footer__section">
      <h3 class="sis-footer__title" 
          style="color: {{ section.settings.title_color }}; 
                 font-size: {{ section.settings.title_font_size }}px;">
        {{ section.settings.industrie_title | default: "SIS Saar Industrie Service" }}
      </h3>
      
      <div class="sis-footer__content">
        <!-- Kontakt Info -->
        <div class="sis-footer__info">
          <h4 class="sis-footer__subtitle" 
              style="color: {{ section.settings.subtitle_color }}; 
                     font-size: {{ section.settings.subtitle_font_size }}px;">
            Kontakt
          </h4>
          
          {% if section.settings.industrie_address %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              {{ section.settings.industrie_address }}
            </p>
          {% endif %}
          
          {% if section.settings.industrie_phone %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              Tel: {{ section.settings.industrie_phone }}
            </p>
          {% endif %}
          
          {% if section.settings.industrie_email %}
            <p class="sis-footer__text" 
               style="color: {{ section.settings.text_color }}; 
                      font-size: {{ section.settings.text_font_size }}px;">
              E-Mail: {{ section.settings.industrie_email }}
            </p>
          {% endif %}
        </div>
        
        <!-- Rechtliches -->
        <div class="sis-footer__legal">
          <h4 class="sis-footer__subtitle" 
              style="color: {{ section.settings.subtitle_color }}; 
                     font-size: {{ section.settings.subtitle_font_size }}px;">
            Rechtliches
          </h4>
          
          {% for block in section.blocks %}
            {% if block.type == 'industrie_legal' %}
              <a href="{{ block.settings.link }}" 
                 class="sis-footer__link"
                 style="color: {{ section.settings.link_color }}; 
                        font-size: {{ section.settings.text_font_size }}px;">
                {{ block.settings.text }}
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Copyright -->
  {% if section.settings.copyright_text %}
    <div class="sis-footer__copyright" 
         style="border-top: 1px solid {{ section.settings.separator_color }}; 
                margin-top: {{ section.settings.section_padding | divided_by: 2 }}px; 
                padding-top: {{ section.settings.section_padding | divided_by: 4 }}px;">
      <div class="sis-footer__container">
        <p class="sis-footer__copyright-text" 
           style="color: {{ section.settings.text_color }}; 
                  font-size: {{ section.settings.text_font_size | minus: 2 }}px;">
          {{ section.settings.copyright_text }}
        </p>
      </div>
    </div>
  {% endif %}
</footer>

