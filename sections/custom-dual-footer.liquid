{{ 'custom-dual-footer.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .dual-footer-container {
    --separator-color: {{ section.settings.separator_color }};
    --separator-width: {{ section.settings.separator_width }}px;
  }

  /* Linke Spalte Stile */
  #shopify-section-{{ section.id }} .footer-column.left-column {
    {% if section.settings.background_image_left != blank %}
      background-image: url('{{ section.settings.background_image_left | image_url: width: 1000 }}');
    {% else %}
      background-color: {{ section.settings.background_color_left }};
    {% endif %}
  }

  #shopify-section-{{ section.id }} .left-column .footer-heading {
    color: {{ section.settings.heading_color_left }};
    font-size: {{ section.settings.heading_size_left }}px;
    font-family: {{ section.settings.heading_font_left.family }}, {{ section.settings.heading_font_left.fallback_families }};
    font-weight: {% if section.settings.heading_bold_left %}bold{% else %}normal{% endif %};
  }

  #shopify-section-{{ section.id }} .left-column .footer-link {
    color: {{ section.settings.link_color_left }};
    font-size: {{ section.settings.link_size_left }}px;
    font-family: {{ section.settings.link_font_left.family }}, {{ section.settings.link_font_left.fallback_families }};
    font-weight: {% if section.settings.link_bold_left %}bold{% else %}normal{% endif %};
  }

  /* Rechte Spalte Stile */
  #shopify-section-{{ section.id }} .footer-column.right-column {
    {% if section.settings.background_image_right != blank %}
      background-image: url('{{ section.settings.background_image_right | image_url: width: 1000 }}');
    {% else %}
      background-color: {{ section.settings.background_color_right }};
    {% endif %}
  }

  #shopify-section-{{ section.id }} .right-column .footer-heading {
    color: {{ section.settings.heading_color_right }};
    font-size: {{ section.settings.heading_size_right }}px;
    font-family: {{ section.settings.heading_font_right.family }}, {{ section.settings.heading_font_right.fallback_families }};
    font-weight: {% if section.settings.heading_bold_right %}bold{% else %}normal{% endif %};
  }

  #shopify-section-{{ section.id }} .right-column .footer-link {
    color: {{ section.settings.link_color_right }};
    font-size: {{ section.settings.link_size_right }}px;
    font-family: {{ section.settings.link_font_right.family }}, {{ section.settings.link_font_right.fallback_families }};
    font-weight: {% if section.settings.link_bold_right %}bold{% else %}normal{% endif %};
  }
</style>

<div class="dual-footer-container">
  <div class="footer-column left-column">
    {% if section.settings.heading_left != blank %}
      <h3 class="footer-heading">{{ section.settings.heading_left }}</h3>
    {% endif %}
    <div class="footer-links">
      {% for block in section.blocks %}
        {% if block.type == 'link_item' and block.settings.column == 'left' %}
          <a href="{{ block.settings.link_url }}" class="footer-link" {{ block.shopify_attributes }}>
            {{ block.settings.link_text }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="footer-separator"></div>

  <div class="footer-column right-column">
    {% if section.settings.heading_right != blank %}
      <h3 class="footer-heading">{{ section.settings.heading_right }}</h3>
    {% endif %}
    <div class="footer-links">
      {% for block in section.blocks %}
        {% if block.type == 'link_item' and block.settings.column == 'right' %}
          <a href="{{ block.settings.link_url }}" class="footer-link" {{ block.shopify_attributes }}>
            {{ block.settings.link_text }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

