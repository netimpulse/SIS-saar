{{ 'sis-header-neu.css' | asset_url | stylesheet_tag }}

{% comment %}
  Wir fügen CSS-Variablen direkt hier ein, damit sie im CSS-Code verwendet werden können.
  Das ist sauberer als viele einzelne Style-Tags.
{% endcomment %}
<style>
  :root {
    --header-padding-vertical: {{ section.settings.header_padding_vertical }}px;
    --header-padding-horizontal: {{ section.settings.header_padding_horizontal }}px;
    --nav-hover-color: {{ section.settings.nav_hover_color }};
  }
</style>

<header class="sis-header" style="background-color: {{ section.settings.background_color }};">
  <div class="sis-header__container">
    
    {% comment %} LOGO {% endcomment %}
    <div class="sis-header__logo" style="position: absolute; top: {{ section.settings.logo_position_y }}%; left: {{ section.settings.logo_position_x }}%; transform: translate(-{{ section.settings.logo_position_x }}%, -{{ section.settings.logo_position_y }}%);">
      <a href="{{ shop.url }}">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | img_url: '300x' }}" alt="{{ shop.name }}" class="sis-header__logo-img">
        {% else %}
          <span class="sis-header__logo-text" style="color: {{ section.settings.logo_text_color }}; font-size: {{ section.settings.logo_font_size }}px;">
            {{ section.settings.logo_text | default: shop.name }}
          </span>
        {% endif %}
      </a>
    </div>

    {% comment %} NAVIGATION (jetzt aus dem Shopify Admin) {% endcomment %}
    <nav class="sis-header__nav" style="position: absolute; top: {{ section.settings.menu_position_y }}%; left: {{ section.settings.menu_position_x }}%; transform: translate(-{{ section.settings.menu_position_x }}%, -{{ section.settings.menu_position_y }}%);">
      {% for link in section.settings.menu.links %}
        <a href="{{ link.url }}" 
           class="sis-header__nav-link {% if link.active %}sis-header__nav-link--active{% endif %}" 
           style="color: {{ section.settings.nav_text_color }}; font-size: {{ section.settings.nav_font_size }}px;">
          {{ link.title }}
        </a>
      {% endfor %}
    </nav>

    {% comment %} KONTAKT BUTTON {% endcomment %}
    {% if section.settings.contact_button_link != blank %}
      <a href="{{ section.settings.contact_button_link }}" 
         class="sis-header__contact-btn" 
         style="background-color: {{ section.settings.contact_button_bg_color }}; color: {{ section.settings.contact_button_text_color }};">
        {{ section.settings.contact_button_text | default: 'Kontakt' }}
      </a>
    {% endif %}

    {% comment %} Mobile Burger Menu Button {% endcomment %}
    <button class="sis-header__mobile-toggle" style="color: {{ section.settings.nav_text_color }};">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>