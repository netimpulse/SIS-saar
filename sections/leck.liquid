{% comment %}
  ====================================================================================================================
  CUSTOM HEADER SECTION
  ====================================================================================================================
  * Dynamisches Menü über Theme-Editor wählbar
  * Anpassbare Hover-Farbe für Navigationslinks
  * Anpassbarer Kontakt-Button (Text, Link, Farben)
  * X/Y-Positionierung für Logo und Navigation
  * Anpassbares Padding für den gesamten Header
  ====================================================================================================================
{% endcomment %}

<style>
  .custom-header-section {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: {{ section.settings.background_color }};
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .custom-header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ section.settings.padding_vertical }}px {{ section.settings.padding_horizontal }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative; /* Wichtig für die Positionierung */
  }

  .custom-header__logo {
    display: flex;
    align-items: center;
    /* Dynamische Positionierung */
    transform: translate({{ section.settings.logo_position_x }}px, {{ section.settings.logo_position_y }}px);
    transition: transform 0.3s ease;
  }

  .custom-header__logo-img {
    height: 40px;
    width: auto;
  }

  .custom-header__logo-text {
    font-weight: 700;
    text-decoration: none;
  }

  .custom-header__nav-wrapper {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    /* Dynamische Positionierung */
    transform: translate({{ section.settings.menu_position_x }}px, {{ section.settings.menu_position_y }}px);
    transition: transform 0.3s ease;
  }
  
  .custom-header__nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .custom-header__nav-link {
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
    padding-bottom: 5px; /* Platz für den Unterstrich */
  }

  .custom-header__nav-link:hover {
    color: {{ section.settings.nav_hover_color }} !important;
  }

  /* Unterstrich-Effekt */
  .custom-header__nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: {{ section.settings.nav_hover_color }};
    transition: width 0.3s ease;
  }

  .custom-header__nav-link:hover::after,
  .custom-header__nav-link.active::after {
    width: 100%;
  }
  
  .custom-header__nav-link.active {
     color: {{ section.settings.nav_hover_color }} !important;
  }

  .custom-header__contact-btn {
    display: inline-block;
    padding: 0.5rem 1.5rem; /* 8px 24px */
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.3s ease, color 0.3s ease;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: 1px solid transparent;
  }

  .custom-header__contact-btn:hover {
    background-color: {{ section.settings.button_hover_bg_color }};
    color: {{ section.settings.button_hover_text_color }};
  }

  .custom-header__mobile-toggle {
    display: none; /* Wird nur auf Mobilgeräten angezeigt */
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .custom-header__mobile-toggle span {
    width: 24px;
    height: 2px;
    background-color: {{ section.settings.nav_text_color }};
    transition: all 0.3s ease;
  }

  /* Responsive Design für Mobilgeräte */
  @media (max-width: 990px) {
    .custom-header__nav-wrapper {
      display: none; /* Verstecke Navigations-Wrapper auf Mobilgeräten */
    }
    
    .custom-header__mobile-toggle {
      display: flex; /* Zeige Hamburger-Menü-Icon */
    }
    
    /* Setze Positionierung auf Mobilgeräten zurück */
    .custom-header__logo, .custom-header__nav-wrapper {
      transform: none !important;
    }
  }
</style>

<header class="custom-header-section">
  <div class="custom-header__container">
    
    <div class="custom-header__logo">
      <a href="{{ shop.url }}">
        {% if section.settings.logo %}
          <img src="{{ section.settings.logo | image_url: width: 200 }}" 
               alt="{{ section.settings.logo.alt | default: shop.name }}"
               class="custom-header__logo-img"
               height="{{ 40 }}"
               width="{{ 40 | times: section.settings.logo.aspect_ratio | round }}">
        {% else %}
          <span class="custom-header__logo-text" style="color: {{ section.settings.logo_color }}; font-size: {{ section.settings.logo_font_size }}px;">
            {{ section.settings.logo_text | default: shop.name }}
          </span>
        {% endif %}
      </a>
    </div>

    <div class="custom-header__nav-wrapper">
      <nav class="custom-header__nav" role="navigation">
        {%- for link in section.settings.menu.links -%}
          <a href="{{ link.url }}" 
             class="custom-header__nav-link {% if link.active %}active{% endif %}"
             style="color: {{ section.settings.nav_text_color }}; font-size: {{ section.settings.nav_font_size }}px;">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>

      {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="custom-header__contact-btn">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    <button class="custom-header__mobile-toggle" aria-label="Menü öffnen">
      <span></span>
      <span></span>
      <span></span>
    </button>
    
  </div>
</header>

