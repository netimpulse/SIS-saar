{%- comment -%} Grid für Gebäudeservices {%- endcomment -%}

{{ 'building-services-grid-style.css' | asset_url | stylesheet_tag }}

<section class="building-services-grid" style="background-color:{{ section.settings.bg_color }};">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="grid-title" style="color:{{ section.settings.title_color }}; font-size:{{ section.settings.title_size }}px; font-family:{{ section.settings.font_family }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    <div class="service-grid cols-{{ section.settings.columns }}">
      {% for block in section.blocks %}
        <div class="service-card" style="border:{{ section.settings.border_width }}px solid {{ section.settings.border_color }}; background-color:{{ block.settings.card_bg_color }}; box-shadow:0 0 {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};">
          {% if block.settings.image != blank %}
            <div class="service-image">
              <img src="{{ block.settings.image | img_url: '540x' }}" alt="{{ block.settings.title }}">
            </div>
          {% endif %}
          <div class="service-content" style="padding:1rem;">
            <h3 class="service-title" style="color:{{ section.settings.card_title_color }}; font-size:{{ section.settings.card_title_size }}px; font-family:{{ section.settings.font_family }};">{{ block.settings.title }}</h3>
            <p class="service-text" style="color:{{ section.settings.card_text_color }}; font-size:{{ section.settings.card_text_size }}px; font-family:{{ section.settings.font_family }};">{{ block.settings.description }}</p>
            {% if block.settings.link_label != blank and block.settings.link_url != blank %}
              <a href="{{ block.settings.link_url }}" class="service-link" style="color:{{ section.settings.link_color }};">{{ block.settings.link_label }}</a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{%- schema -%}
{
  "name": "Building Services",
  "settings": [
    { "type": "text", "id": "title", "label": "Abschnittstitel", "default": "Unsere Dienstleistungen im Gebäudeservice" },
    { "type": "color", "id": "bg_color", "label": "Hintergrundfarbe", "default": "#F9F9F9" },
    { "type": "color", "id": "title_color", "label": "Titel-Farbe", "default": "#333333" },
    { "type": "range", "id": "title_size", "label": "Titel-Größe", "min": 20, "max": 60, "step": 1, "default": 32, "unit": "px" },
    { "type": "color", "id": "card_title_color", "label": "Karten-Titel-Farbe", "default": "#222222" },
    { "type": "range", "id": "card_title_size", "label": "Karten-Titel-Größe", "min": 14, "max": 40, "step": 1, "default": 22, "unit": "px" },
    { "type": "color", "id": "card_text_color", "label": "Karten-Text-Farbe", "default": "#555555" },
    { "type": "range", "id": "card_text_size", "label": "Karten-Text-Größe", "min": 12, "max": 24, "step": 1, "default": 16, "unit": "px" },
    { "type": "color", "id": "border_color", "label": "Kartenrahmenfarbe", "default": "#E5E5E5" },
    { "type": "range", "id": "border_width", "label": "Kartenrahmenstärke", "min": 0, "max": 10, "step": 1, "default": 1, "unit": "px" },
    { "type": "range", "id": "columns", "label": "Anzahl der Spalten", "min": 1, "max": 4, "step": 1, "default": 3 },
    { "type": "color", "id": "link_color", "label": "Link-Farbe", "default": "#007ACC" },
    { "type": "select", "id": "font_family", "label": "Schriftart", "options": [
        { "value": "Arial, sans-serif", "label": "Arial" },
        { "value": "Helvetica, sans-serif", "label": "Helvetica" },
        { "value": "Georgia, serif", "label": "Georgia" },
        { "value": "Times New Roman, serif", "label": "Times New Roman" },
        { "value": "Montserrat, sans-serif", "label": "Montserrat" }
      ], "default": "Arial, sans-serif" }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Dienstleistung",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Bild" },
        { "type": "text", "id": "title", "label": "Titel", "default": "Service Titel" },
        { "type": "textarea", "id": "description", "label": "Beschreibung", "default": "Kurze Beschreibung der angebotenen Dienstleistung." },
        { "type": "text", "id": "link_label", "label": "Link-Text", "default": "Mehr erfahren" },
        { "type": "url", "id": "link_url", "label": "Link-URL" },
        { "type": "color", "id": "card_bg_color", "label": "Karten-Hintergrundfarbe", "default": "#FFFFFF" },
        { "type": "color", "id": "shadow_color", "label": "Schattierungsfarbe", "default": "rgba(0,0,0,0.1)" },
        { "type": "range", "id": "shadow_blur", "label": "Schattierungsstärke", "min": 0, "max": 50, "step": 1, "default": 10, "unit": "px" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Building Services"
    }
  ]
}
{%- endschema -%}
