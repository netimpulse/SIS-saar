<div class="review-card">
  <div class="review-content">
    <div class="star-rating">
      {% for i in (1..block.settings.star_rating) %}
        <span class="star-icon">â˜…</span>
      {% endfor %}
    </div>

    <h3 class="person-name" style="font-family: {{ block.settings.name_font.family }}, {{ block.settings.name_font.fallback_families }}; font-size: {{ block.settings.name_font_size }}px;">
      {{ block.settings.person_name }}
    </h3>

    <div class="review-text" style="font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }}; font-size: {{ block.settings.text_font_size }}px;">
      {{ block.settings.review_text }}
    </div>
  </div>

{% if block.settings.person_image != blank %}
  <div class="person-box"
       style="width: {{ block.settings.image_size }}px; height: {{ block.settings.image_size }}px;">
    <img
      src="{{ block.settings.person_image | image_url: width: block.settings.image_size }}"
      alt="{{ block.settings.person_name }}"
      class="person-image">
  </div>
{% endif %}
</div>

